<div class="show-card m-4">
  <div class="card__title">
    <div class="icon" >
      <a id="back-btn" href="<%= spaceships_path %>"><i class="fa fa-arrow-left"></i> </a>
    </div>
  </div>
  <div class="row card__body">
    <div class="half col-12 col-lg-6">
      <div class="featured_text  ">
        <h1><%= @spaceship.name %></h1>
        <p class="sub"><%= @spaceship.manufacturer %></p>
        <p class="price">$ <%=@spaceship.price%></p>
      </div>
      <div class="image mb-5">
        <%= image_tag "#{rand(16)}.png", class: 'show-image'%>
      </div>
    </div>
    <div class="half col-12 col-lg-6">
      <div class="description">
        <h4 class="droid">In-built droid : <strong><%=Faker::Movies::StarWars.droid %></strong></h4>
        <h4 class="length">Length : <strong><%=@spaceship.length %></strong></h4>
        <h4 class="speed">Speed : <strong><%=@spaceship.speed %></strong></h4>
        <h4 class="droid">Location : <strong><%=@spaceship.location %></strong></h4>
        <h4 class="class">Class : <strong><%=@spaceship.spaceship_class %></strong></h4>
      </div>
      <span class="available"><i class="fa fa-pen"></i> Available</span>
      <div class="reviews mt-4">
        <h1><light>Reviews for </light><%= @spaceship.name %> :</h1>
        <% @spaceship.reviews.each do |review| %>
          <%= random_avatar( {height: 40, width: 40})%>
          <span><strong><%= review.user.name %></strong></span><div class="stars-container">
            <% i = 1 %>
            <% j = 0 %>
            <% until j == 5  %>
              <ul class="stars ">
                <% if i <= review.stars %>
                  <li><i class="fas fa-star"></i></li>
                <% else %>
                  <li> <i class="far fa-star"></i></li>
                <% end %>
                <% i += 1 %>
                <% j += 1 %>
              <% end %>
            </ul>
          </div>
          <p><%= review.content %></p>
          <br>
        <% end %>
        <div class="action col-12 col-lg-6 mt-3">
          <button type="button"><%= link_to "Book now!", new_spaceship_booking_path(@spaceship)%></button>
          
        </div>
      </div>
    </div>
  </div>
  <div class="row card__footer footer">
    <div class="recommend col-12 col-lg-6">
      <p>Recommended by</p>
      <h3>Obi-Wan Kenobi</h3>
    </div>
  </div>
</div>
</div>
