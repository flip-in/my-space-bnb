<div class="container">
  <h2><%= link_to "<< Back to spaceships", spaceships_path %></h2>
  <br>
  <div class="spaceship-image">
    <%= image_tag 'xwing.jpg', class: 'card-img-top'%>
   </div>
  <div class="spaceshipid-detail">
    <h1> <%= @spaceship.name %></h1>
      <ul>
        <li><strong>Type: </strong><%= @spaceship.spaceship_class %></li>
        <li><strong>Brand: </strong><%= @spaceship.manufacturer %></li>
        <li><strong>Price: </strong><%= @spaceship.price %></li>
        <li><strong>Rating: </strong><%= @spaceship.rating %></li>
        <li><strong>Pickup station: </strong><%= @spaceship.location %></li>
        <li><strong>Description: </strong><%= @spaceship.description %></li>
        <li><strong>Passenger Capcity: </strong><%= @spaceship.passengers %></li>
        <li><strong>Max Speed: </strong><%= @spaceship.speed %></li>
        <li><strong>Spaceship Length: </strong><%= @spaceship.length %></li>
        <li><strong>Crew Onboard: </strong><%= @spaceship.crew %></li>
      </ul>

    <a href="#" class="btn btn-primary">Book now!</a>
  </div>
    <% if policy(@spaceship).edit? %>
      <div class="edit">
        <%= link_to "Edit Spaceship", edit_spaceship_path %>
      </div>
    <% end %>
    <% if policy(@spaceship).destroy? %>
      <div class='delete'>
        <%= link_to spaceship_path(@spaceship.id), method: :delete, data: {confirm: "Are you sure?"} do %>
          <i class="far fa-trash-alt" style="font-size: 14px"></i>
        <% end %>
      </div>
    <% end %>

  <div class="reviews">
    <h1>Reviews for <%= @spaceship.name %></h1>
    <% @spaceship.reviews.each do |review| %>
    <p><%= review.content %></p>
      <br>
    <% end %>
  </div>


</div>
