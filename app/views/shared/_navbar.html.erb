<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon" style="background-image: linear-gradient(6deg, rgba(0,0,0,1) 0%, rgba(27,0,43,1) 50%, rgba(0,0,0,1) 85%);">
  <% if user_signed_in? %>
    <%= link_to spaceships_path, class: "navbar-brand" do %>
      <%= image_tag "logospacebnb.png" %>
      <% end %>
  <% else %>
    <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "logospacebnb.png" %>
    <% end %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My Dashboard", dashboard_path , class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "List a Spaceship", new_spaceship_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <div class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= avatar_for(current_user, {height: 40, width: 40})%>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "See Profile", "#", class: "dropdown-item" %>
            <%#= link_to "My starships", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
